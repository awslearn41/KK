pipeline {
    agent any

    parameters {
        choice(name: 'BRANCH', choices: ['main','production'], description: 'Choose the environment to deploy')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: params.BRANCH,
                    credentialsId: 'github_id',
                    url: 'https://github.com/jaintpharsha/k8s-ip-app.git'
            }
        }

        stage('Build & Deploy') {
            parallel {

                stage('BUILD_MAIN') {
                    when {
                        expression { params.BRANCH == 'main' }
                    }
                    steps {
                        sh '''
                            echo "SHELL ----> BRANCH: ${BRANCH}"
                            sudo apt update
                        '''
                    }
                }

                stage('BUILD_PROD') {
                    when {
                        expression { params.BRANCH == 'production' }
                    }
                    steps {
                        sh '''
                            echo "SHELL ----> BRANCH: ${BRANCH}"
                            # Add production deployment commands here
                        '''
                    }
                }
            }
        }
    }
}