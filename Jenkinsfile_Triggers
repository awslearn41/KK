pipeline {
    agent any

    triggers {
        pollSCM('* * * * *')  // Check Git every 1 minute
        // OR use githubPush() if using webhooks
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'Building after code change...'
            }
        }
    }
}
